# API Keys para servicios externos
# Copia este archivo a .env.local y agrega tus claves

# OpenWeatherMap API
NEXT_PUBLIC_OPENWEATHER_API_KEY=your_openweather_api_key_here

# Geoapify API (para búsqueda de ciudades)
NEXT_PUBLIC_GEOAPIFY_API_KEY=your_geoapify_api_key_here

# BigDataCloud API (para geocoding)
NEXT_PUBLIC_BIGDATACLOUD_API_KEY=your_bigdatacloud_api_key_here

# Configuración del sitio
NEXT_PUBLIC_SITE_URL=https://dn.codes
NEXT_PUBLIC_SITE_NAME=dn.codes
